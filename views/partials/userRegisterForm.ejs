<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body text-center mb-3">
      <h1><img src="/icono.png"></h1>
      <h1>Registrate</h1>
      <%- include ("./messages", {errors}) %>
      <form action="/registro" method="POST">
        <div class="form-group">
          <input
            type="username"
            id="username"
            name="username"
            class="form-control lh-lg"
            placeholder="Nombre"
            value="<%= typeof username != 'undefined' ? username : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            type="email"
            id="email"
            name="email"
            class="form-control lh-lg"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control lh-lg"
            placeholder="Contrasena"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            id="rePassword"
            name="rePassword"
            class="form-control lh-lg"
            placeholder="Confirma la contrasena"
            value="<%= typeof rePassword != 'undefined' ? rePassword : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Crea la cuenta
        </button>
      </form>
      <p class="lead mt-4">Ya tenes cuenta ? <a href="/login">Logueate</a></p>
    </div>
  </div>
</div>